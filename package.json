{
  "name": "solar-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npm run dev:admin",
    "dev:admin": "cd free-react-tailwind-admin-dashboard && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:admin\" \"npm run dev:frontend\"",
    "install:admin": "cd free-react-tailwind-admin-dashboard && npm install",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:admin && npm run install:backend && npm run install:frontend",
    "test": "echo \"(root) no tests configured\"",
    "test:frontend": "npm --prefix frontend run test --if-present",
    "test:backend": "npm --prefix backend run test --if-present",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:dev": "docker-compose up --build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "tailwindcss": "^3.4.3"
  }
}
